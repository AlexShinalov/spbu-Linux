#ifndef UNISTDX_NET_IPV6_SOCKET_ADDRESS
#define UNISTDX_NET_IPV6_SOCKET_ADDRESS

#include <unistdx/net/family>
#include <unistdx/net/ipv6_address>

namespace sys {

    /// Socket address length type.
    using socket_length_type = ::socklen_t;

    /**
    \brief IPv4 socket address wrapper.
    \date 2020-11-10
    \ingroup wrapper net
    */
    class ipv6_socket_address {

    private:
        sockinet6_type _address{};

    public:

        /// Construct socket_address with IPv6 address and port.
        inline
        ipv6_socket_address(ipv6_address address, port_type port) noexcept {
            this->_address.sin6_family = sa_family_type(socket_address_family::ipv6);
            this->address(address);
            this->port(port);
        }

        ipv6_socket_address(const char* host, port_type port);

        /// Construct socket address from \c sockaddr_in6 system type.
        inline ipv6_socket_address(const sockinet6_type& rhs) noexcept: _address(rhs) {}

        inline ipv6_socket_address() noexcept {
            this->_address.sin6_family = sa_family_type(socket_address_family::ipv6);
        }

        ~ipv6_socket_address() = default;
        ipv6_socket_address(const ipv6_socket_address&) = default;
        ipv6_socket_address& operator=(const ipv6_socket_address&) = default;
        ipv6_socket_address(ipv6_socket_address&&) = default;
        ipv6_socket_address& operator=(ipv6_socket_address&&) = default;

        static constexpr inline socket_address_family family() noexcept { return socket_address_family::ipv6; }
        static constexpr inline sa_family_type sa_family() noexcept { return sa_family_type(family()); }
        inline ipv6_address address() const noexcept { return ipv6_address(this->_address.sin6_addr); }
        inline void address(ipv6_address rhs) noexcept { this->_address.sin6_addr = rhs; }
        inline port_type port() const noexcept {
            return to_host_format<port_type>(this->_address.sin6_port);
        }
        inline void port(port_type rhs) noexcept {
            this->_address.sin6_port = to_network_format<port_type>(rhs);
        }
        inline u32 flow_identifier() const noexcept { return this->_address.sin6_flowinfo; }
        inline void flow_identifier(u32 rhs) noexcept { this->_address.sin6_flowinfo = rhs; }
        inline u32 scope_id() const noexcept { return this->_address.sin6_scope_id; }
        inline void scope_id(u32 rhs) noexcept { this->_address.sin6_scope_id = rhs; }
        inline void clear() { this->_address = {}; }

        static constexpr inline socket_length_type size() noexcept { return sizeof(sockinet6_type); }
        inline socket_address_type* get() noexcept { return reinterpret_cast<socket_address_type*>(&this->_address); }
        inline socket_address_type* get() const noexcept { return const_cast<socket_address_type*>(reinterpret_cast<const socket_address_type*>(&this->_address)); }

        inline bool operator<(const ipv6_socket_address& rhs) const noexcept {
            return std::make_tuple(sa_family(), address(), port()) <
                   std::make_tuple(rhs.sa_family(), rhs.address(), rhs.port());
        }

        inline bool operator<=(const ipv6_socket_address& rhs) const noexcept {
            return this->operator<(rhs) || this->operator==(rhs);
        }

        inline bool operator>(const ipv6_socket_address& rhs) const noexcept {
            return !this->operator<(rhs) && !this->operator==(rhs);
        }

        inline bool operator>=(const ipv6_socket_address& rhs) const noexcept {
            return !this->operator<(rhs);
        }

        inline bool operator==(const ipv6_socket_address& rhs) const noexcept {
            return address() == rhs.address() &&
                this->_address.sin6_port == rhs._address.sin6_port;
        }

        inline bool operator!=(const ipv6_socket_address& rhs) const noexcept {
            return !this->operator==(rhs);
        }

        inline explicit operator bool() const noexcept { return bool(address()); }
        inline bool operator!() const noexcept { return !this->operator bool(); }

        friend std::ostream&
        operator<<(std::ostream& out, const ipv6_socket_address& rhs);

        friend std::istream&
        operator>>(std::istream& in, ipv6_socket_address& rhs);

        friend bstream&
        operator<<(bstream& out, const ipv6_socket_address& rhs);

        friend bstream&
        operator>>(bstream& in, ipv6_socket_address& rhs);

        friend struct std::hash<sys::ipv6_socket_address>;

    };

    std::ostream&
    operator<<(std::ostream& out, const ipv6_socket_address& rhs);

    std::istream&
    operator>>(std::istream& in, ipv6_socket_address& rhs);

    bstream&
    operator<<(bstream& out, const ipv6_socket_address& rhs);

    bstream&
    operator>>(bstream& in, ipv6_socket_address& rhs);

}

namespace std {

    /// Specialisation of \link std::hash \endlink for \link sys::ipv6_socket_address \endlink.
    template<>
    struct hash<sys::ipv6_socket_address>: public hash<sys::ipv6_address> {

        /**
        \brief Computes hash by XOR-ing hash of the address with port number.
        \details
        Depending on the address family, uses hash of either ipv6_address or ipv6_address.
        */
        inline size_t
        operator()(const sys::ipv6_socket_address& rhs) const noexcept {
            return rhs.port() ^ this->hash<sys::ipv6_address>::operator()(rhs.address());
        }

    };

}

#endif // vim:filetype=cpp
